programa
{
      real n1, n2, n3, maior
	
	funcao inicio()
	{
		escreva("Digite o primeiro número: ")
		leia(n1)
		escreva("Digite o segundo número: ")
		leia(n2)
		escreva("Digite o terceiro número: ")
		leia(n3)

		se (n1 > n2)
		se (n1 > n3)
		maior = n1
		
	     senao
	     maior = n3
		
		
		se(n2 > n1)
		se(n2 > n3)
		
		maior = n2
		senao
		maior = n3

		escreva("\n O maior número é o: ", maior, "\n")
	}
}
